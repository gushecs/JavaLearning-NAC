<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="622.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ViewController">
   <children>
      <Label layoutX="140.0" layoutY="36.0" text="Calculate sum">
         <font>
            <Font name="System Bold Italic" size="18.0" />
         </font>
      </Label>
      <TextField fx:id="txtNumber1" layoutX="66.0" layoutY="113.0" promptText="First value here" />
      <TextField fx:id="txtNumber2" layoutX="186.0" layoutY="159.0" promptText="Second value here" />
      <Button fx:id="btSum" layoutX="315.0" layoutY="206.0" mnemonicParsing="false" onAction="#onBtSumAction" text="Sum" />
      <Label layoutX="49.0" layoutY="242.0" text="Result:">
         <font>
            <Font name="System Italic" size="12.0" />
         </font>
      </Label>
      <Label fx:id="labelResult" layoutX="98.0" layoutY="230.0" textFill="RED">
         <font>
            <Font name="Berlin Sans FB" size="36.0" />
         </font>
      </Label>
      <ComboBox fx:id="cbPerson" layoutX="417.0" layoutY="82.0" onAction="#onCbPersonAction" prefWidth="150.0" promptText="Select a person" />
      <Button fx:id="btAll" layoutX="481.0" layoutY="107.0" mnemonicParsing="false" onAction="#onBtAllAction" prefHeight="55.0" prefWidth="120.0" text="ALL" />
   </children>
</AnchorPane>
